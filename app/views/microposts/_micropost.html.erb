<li id="micropost-<%= micropost.id %>">
  <span class="staff"><%= link_to micropost.staff.name, micropost.staff %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前に更新
    <% if current_staff?(micropost.staff) %>
      <%= link_to "削除", micropost, method: :delete, data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
</li>