<h1>こちらから予約をお取りください</h1>
<% if logged_in? %>
    <div class="col-md-2 col-md-offset-4">
      <%= form_for(@timetable) do |f| %>
        <%= f.label :日付を指定してください %>
        <%= f.select :date, [["今日", @day1],
                             [@day2, @day2],
                             [@day3, @day3],
                             [@day4, @day4],
                             [@day5, @day5],
                             [@day6, @day6],
                             [@day7, @day7],] %>
        <%= f.label :時間を選択してください %>
        <%= f.select :hour, [["9時", "9"], 
                             ["10時", "10"],
                             ["11時", "11"],
                             ["12時", "12"],
                             ["15時", "15"],
                             ["16時", "16"],
                             ["17時", "17"],
                             ["18時", "18"],
                             ["19時", "19"],], {id: "hour"} %>
        <%= f.label :分を選択してください %>                     
        <%= f.select :minute, [["00分", "00"], 
                               ["30分", "30"]], {id: "minute"} %>
        <%= f.submit :予約する, class: "btn btn-primary", data: { confirm: "ご予約をとります。よろしいですか？"}  %>
      <% end %> 
    </div>
    <%= link_to "#{@day1}日の予約表を見る", root_path %><br><br>
    <%= link_to "#{@day2}日の予約表を見る", day2_path %><br><br>
    <%= link_to "#{@day3}日の予約表を見る", day3_path %><br><br>
    <%= link_to "#{@day4}日の予約表を見る", day4_path %><br><br>
    <%= link_to "#{@day5}日の予約表を見る", day5_path %><br><br>
    <%= link_to "#{@day6}日の予約表を見る", day6_path %><br><br>
    <%= link_to "#{@day7}日の予約表を見る", day7_path %> ←閲覧中<br><br>
    
<% end %>



