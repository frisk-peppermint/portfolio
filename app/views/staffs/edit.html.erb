<h1>アカウント情報の変更</h1>

<%= form_for(@staff) do |f| %>
      <% if @staff.image? %>
      <%= image_tag @staff.image.url %>
    <% else %>
      <%= image_tag "/assets/default.jpg", :size => '100x100' %>
    <% end %>
      <button type="button" class="btn btn-outline-secondary rounded-pill">
         <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
      </button>
　  　<%= f.submit '画像を更新する', class: 'btn btn-primary' %>
    <% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    
    <%= form_for(@staff) do |f| %>
      <%= render 'helpers/error_messages', object: f.object %>

      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control', id: 'staff_name' %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control', id: 'staff_email' %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, class: 'form-control', id: 'staff_password' %>

      <%= f.label :パスワード（確認） %>
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'staff_password_confirmation' %>

      <%= f.submit "変更を保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>