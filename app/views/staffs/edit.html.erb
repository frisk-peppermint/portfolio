<h1>アカウント情報の変更</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@staff) do |f| %>
      <%= render 'helpers/error_messages', object: f.object %>

      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control', id: 'staff_name' %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control', id: 'staff_email' %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, class: 'form-control', id: 'staff_password' %>

      <%= f.label :パスワード（確認） %>
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'staff_password_confirmation' %>

      <%= f.submit "変更を保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>