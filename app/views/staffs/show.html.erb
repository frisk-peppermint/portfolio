<div class="row">
  <aside class="col-md-4">
    <section class="staff_info">
      <h1>
        <%= @staff.name %>
      </h1>
    </section>
    <%= image_tag @staff.image.thumb50.url %>
    
  </aside>
  <div class="col-md-8">
    <% if @staff.microposts.any? %>
      <h3>Microposts (<%= @staff.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
    <% end %>
  </div>
</div>